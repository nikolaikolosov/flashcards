<%= simple_form_for card do |f| %>
  <div class="form-group">
    <%= f.input :original_text, label: 'Немецкое слово',
                input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :translated_text, label: 'Перевод на английский',
                input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :image, as: :file, label: 'Изображение' %>
  </div>

  <div class="form-group">
    <%= f.input :pack_id, collection: current_user.packs.all.order('title'),
                      prompt: 'Выберите колоду', label: 'Колоды',
                      input_html: { class: 'form-control', required: true } %>
  </div>

  <%= f.button :submit, 'Сохранить', class: 'btn btn-default' %>
  <p><i>Карточка сохранится с датой просмотра, равной вчерашнему дню</i></p>
<% end %>