<% content_for :title, t('.title') %>
<p style="font-size: 22px;">
<%= t('.title') %>
</p>
<table class="table table-striped">
  <tr>
    <th><%= t('shared.german_word') %></th>
    <th><%= t('shared.english_translation') %></th>
    <th><%= t('.user') %></th>
    <th><%= t('.next_review') %></th>
    <th><%= t('shared.image') %></th>
    <th colspan="2"></th>
  </tr>
 
  <% @cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.user.email %></td>
        <td><%= card.review_date.strftime("%d.%m.%Y") %></td>
        <% if card.image? %>
          <td><%= image_tag card.image_url, size: "30" %></td>
        <% else %>
          <td><%= t('.no_image') %></td>
        <% end %>
        <td><%= link_to t('shared.edit'), edit_card_path(card) %></td>
        <td><%= link_to t('shared.delete'), card, method: :delete,
                        data: { confirm: t('.delete_card') } %></td>
      </tr>
  <% end %>
</table>