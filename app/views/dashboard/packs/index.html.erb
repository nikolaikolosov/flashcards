<% content_for :title, t('.title') %>
<p style="font-size: 22px;">
<%= t('.title') %>
</p>

<table class="table table-striped">
  <tr>
    <th><%= t('shared.pack_name') %></th>
    <th><%= t('.author') %></th>
    <th colspan="3"></th>
  </tr>
 
  <% @packs.each do |pack| %>
      <tr>
        <td><%= pack.title %></td>
        <% if pack.current? %>
          <td>
            <%= link_to t('.make_inactive'), reset_as_current_pack_path(pack),
                        method: :put %>
          </td>
        <% else %>
          <td>
            <%= link_to t('.make_active'), set_as_current_pack_path(pack),
                        method: :put %>
          </td>
        <% end %>
        <td><%= pack.user.email %></td>
        <td><%= link_to t('shared.edit'), edit_pack_path(pack) %></td>
        <td><%= link_to t('shared.delete'), pack, method: :delete,
                        data: { confirm: t('.delete_pack') } %></td>
      </tr>
  <% end %>
</table>
