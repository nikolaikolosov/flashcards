<p id="notice"><%= notice %></p>

<h1><%= t('.users') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('shared.email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t('.show'), user %></td>
        <td><%= link_to t('shared.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('shared.delete'), user, method: :delete, data: { confirm: t('.user_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_user'), new_user_path %>
