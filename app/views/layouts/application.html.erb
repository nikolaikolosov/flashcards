<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">
      <header>
        <nav class="navbar navbar-default">
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to "Главная", root_path %></li>
              <% if current_user %>
                <li><%= link_to "Мои колоды", packs_path %></li>
                <li><%= link_to "Добавить колоду", new_pack_path %></li>
                <li><%= link_to "Мои карточки", cards_path %></li>
                <li><%= link_to "Добавить карточку", new_card_path %></li>
                <li><%= link_to "Редактировать профиль", edit_user_path(current_user.id) %></li>
                <li><%= link_to "Выход", :logout, method: :post %></li>
              <% else %>
                <li><%= link_to "Регистрация", new_user_path %></li>
                <li><%= link_to "Вход", :login %></li>
              <% end %>
            </ul>
        </nav>
        <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: name %>
        <% end -%>
      </header>
      <%= yield %>
    </div>
  </div>
</body>
</html>

