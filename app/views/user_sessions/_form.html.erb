<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag t('shared.email') %><br />
    <%= text_field_tag :email, '', class: 'form-control' %>
  </div>
  <div class="field">
    <%= label_tag t('shared.password') %><br />
    <%= password_field_tag :password, '', class: 'form-control' %>
  </div>
  <br />
  <div class="actions">
    <%= submit_tag t('shared.enter'), class: 'btn btn-default' %>
  </div>
<% end %>
